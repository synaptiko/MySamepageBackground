{
	"name": "My Samepage Background",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Do you want your own background on samepage.io? Here it is!",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png"
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"webNavigation",
		"contextMenus",
		"storage"
	]
}
